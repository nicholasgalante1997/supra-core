{
    "extends": "@supra-dev/configs/typescript/base.tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "outDir": "./out",
        "removeComments": false,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "declaration": true,
        "listEmittedFiles": true
    },
    "include": ["lib"],
    "exclude": ["node_modules"]
}